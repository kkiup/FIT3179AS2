{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Shark Attack By Year",
    "width": 180,
  "height": 180,
    "data": {
      "url": "https://raw.githubusercontent.com/kkiup/3179AS2/main/dataset/2_area_date.csv"
    },
    
    "mark": {
      "type": "area",
      "line": {
        "color": "darkred"
      },
      "color": {
        "x1": 1,
        "y1": 1,
        "x2": 1,
        "y2": 0,
        "gradient": "linear",
        "stops": [
          {
            "offset": 0,
            "color": "white"
          },
          {
            "offset": 1,
            "color": "darkred"
          }
        ]
      }
    },
    "encoding": {
      "x": {
        "field": "year",
        "type": "temporal"
      },
      "y": {
        "field": "count",
        "type": "quantitative"
      },
      "tooltip": [
          {"field": "year", "type": "temporal"},
          {"field": "count", "type": "quantitative"}
          ]
    }
  }
  